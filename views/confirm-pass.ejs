<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Mailboss</title>
  </head>
  <!-- bootstrap-cdn -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <!-- stylesheet -->
    <link rel="stylesheet" href="css/styles.css">

    <!-- fontawesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
  <body>

    <section class="Form my-4 mx-5">
      <div class="container">
        <div class="row no-gutters">
          <!-- <div class="col-lg-5">
            <img src="images/2.png" class="img-fluid" alt="">
          </div> -->
          <div class="px-5 pt-5 col-lg-7">
            <h1 class="font-weight-bold py-3">CREATE NEW PASSWORD</h1>
            <% const link="/reset-password/" + email + "/" + token %>
            <form class="" action="<%=link%>" method="post">
              <div class="form-row">
                <div class="col-lg-7">
                  <input type="password" class="form-control my-3 p-3" placeholder="Enter New Password" name="password">
                </div>
              </div>
              <div class="form-row">
                <div class="col-lg-7">
                  <input type="password" class="form-control my-3 p-3" placeholder="Confirm Password">
                </div>
              </div>
              <div class="form-row">
                <div class="col-lg-7">
                  <button type="submit" class="btn1 mt-3 mb-5" name="button">CHANGE PASSWORD</button>
                </div>
              </div>
              <!-- <a href="/new-pass">Forgot Password?</a> -->
              <!-- <p>Don't you have an Account? <a href="#">Register here</a></p> -->
            </form>
          </div>
        </div>
      </div>
    </section>

  </body>
</html>
